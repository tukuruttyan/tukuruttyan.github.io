---
import '../styles/global.css'
import GameCard from '../components/GameCard.astro'
import { gamesData } from '../data/games.ts'

// Use static games data instead of dynamic fetch
// Data is generated at build time by the fetch-games-data script
const gameData = gamesData;
console.log(`Using ${gameData.length} published games from static data`);
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>作るっちゃん | 公式サイト</title>
	</head>
	<body class="bg-gray-50 text-gray-900">
		<!-- Header -->
		<header class="bg-white shadow-sm sticky top-0 z-50">
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center py-4">
					<!-- Logo -->
					<div class="flex items-center">
						<img src="/logo.png" alt="作るっちゃん" class="h-10 w-auto" />
					</div>
					
					<!-- Navigation -->
					<nav class="flex space-x-8">
						<a href="#overview" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">概要</a>
						<a href="#games" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">ゲーム</a>
					</nav>
				</div>
			</div>
		</header>

		<main>
			<!-- Overview Section -->
			<section id="overview" class="py-16 bg-white">
				<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-12">
						<!-- Main Visual -->
						<div class="mb-8">
							<img src="/key-visual.png" alt="作るっちゃん キービジュアル" class="w-48 h-48 mx-auto rounded-lg object-cover">
						</div>
						
						<!-- Overview Text -->
						<div class="max-w-3xl mx-auto">
							<h1 class="text-4xl font-bold mb-6">作るっちゃんとは？</h1>
							<p class="text-lg text-gray-600 leading-relaxed mb-4">ズバリ、「福岡学生ゲーム制作コミュニティ」です！</p>
							<p class="text-lg text-gray-600 leading-relaxed">福岡のゲーム制作をしている・興味がある学生が学校の垣根を超えて集い、高め会える場を目指しています</p>
							<p class="text-lg text-gray-600 leading-relaxed">具体的には、専用discordサーバーの運用とオフラインでの交流会・ゲームジャムの開催などを行っています</p>
							<p class="text-lg text-gray-600 leading-relaxed mb-8">もしマッチするかも...！と思った方がいましたら遠慮なくご連絡下さい！</p>

							<!-- Social Media Buttons -->
							<div class="flex justify-center space-x-4 mb-6">
								<!-- X (Twitter) Button -->
								<a href="https://x.com/tukuruttyan" 
								   target="_blank" 
								   rel="noopener noreferrer"
								   class="w-18 h-18 bg-white hover:bg-gray-50 rounded-full flex items-center justify-center transition-colors shadow-lg hover:shadow-xl border-2 border-gray-100">
									<img src="/x-logo/logo-black.png" alt="X (Twitter)" class="w-8 h-8">
								</a>
								
								<!-- Note Button -->
								<a href="https://note.com/tukuruttyan" 
								   target="_blank" 
								   rel="noopener noreferrer"
								   class="w-18 h-18 bg-white hover:bg-gray-50 rounded-full flex items-center justify-center transition-colors shadow-lg hover:shadow-xl border-2 border-gray-100">
									<img src="/note Visual Identity/note Visual Identity/main/icon.png" alt="Note" class="w-12 h-12">
								</a>
							</div>
						</div>
					</div>

					<!-- Latest Information Section -->
					<div class="mt-16 max-w-3xl mx-auto">
						<h2 class="text-3xl font-bold text-center mb-8">最新情報</h2>
						<div class="max-w-lg mx-auto mt-8">
							<a class="twitter-timeline" href="https://twitter.com/tukuruttyan?ref_src=twsrc%5Etfw">Tweets by tukuruttyan</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
						</div>
					</div>
				</div>
			</section>

			<section id="games" class="py-16 bg-gray-50">
				<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-12">
						<h2 class="text-3xl font-bold mb-4">ゲーム</h2>
						<p class="text-lg text-gray-600">作るっちゃんメンバーが携わった作品の一覧です！</p>
					</div>
					
					<div class="grid grid-cols-1 gap-8">
						{gameData.length > 0 ? (
							gameData.map((game) => (
								<GameCard
									title={game.title}
									teamName={game.teamName}
									description={game.description}
									publishedDate={game.publishedDate}
									link={game.link}
									thumbnailUrl={game.thumbnailUrl}
								/>
							))
						) : (
							<div class="text-center py-12">
								<p class="text-lg text-gray-500 mb-4">現在公開されているゲームはありません</p>
								<p class="text-sm text-gray-400">新しい作品が追加されるまでお待ちください</p>
							</div>
						)}
					</div>
				</div>
			</section>
		</main>

		<!-- Footer -->
		<footer class="bg-gray-900 text-white py-8">
			<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<p>&copy; 2025 作るっちゃん</p>
				</div>
			</div>
		</footer>
	</body>
</html>
